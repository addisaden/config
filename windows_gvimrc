syntax on
set number
set nowrap
set nocompatible

filetype plugin on
filetype indent on
set autoindent

set ignorecase
set smartcase
set hls
set incsearch

colorscheme desert

set shiftwidth=2
set tabstop=2
set smarttab
set expandtab

set backspace=indent,eol,start

set showmatch
set novisualbell
set noerrorbells

set statusline=%f\ :\ %y\ %r\ %M%=[%n:\ %l\ %c]\ %h\ %p%%
set laststatus=2

execute pathogen#infect()
